  
{
    "name": "Pro Grepper",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "app.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Pro Grepper"
    },
    "permissions": [
        "activeTab"
    ]
}